# Public servers from the pool.ntp.org project.
{% if host_role == 'frontend' %}
{% for server in ntp_pool1 %}
server {{ server }}
{% endfor %}
{% elif host_role == 'backend' %}
{% for server in ntp_pool2 %}
server {{ server }}
{% endfor %}
{% endif %}

# Record the rate(in parts of per million) at which the system clock gains/losses time.
driftfile /var/lib/chrony/drift

  1 
# Allow the system clock to the corrected in the first three updates if error is above 1 seconds
makestep 1.0 3

# This directive enables periodically syncing RTC & system time
rtcsync

# Specify directory for log files.
logdir /var/log/chrony
